
public final class Mat {
	private Mat(){};
	private static double EPSILON = 1E-10;

	public static double getEPSILON()
	{	return EPSILON;
	}
	
	public static void setEPSILON(final double EPS)
	{	EPSILON = EPS;
	}

	public static boolean sufficientementeProssimi(double x,double y)
	{	return (Math.abs(x-y) <= EPSILON);
	}
	
	public static int mcd(int x,int y)
	{	if( x<=0 || y<=0)
			throw new IllegalArgumentException();
		return mcdEuclide(x,y);
	}
	
	private static int mcdEuclide(int x,int y)
	{	if(y == 0) return x;
		return mcdEuclide(y,x%y);
	}
	
	public static int mcm(int x,int y)
	{	if( x<=0 || y <= 0)
			throw new IllegalArgumentException();
		return (x*y)/mcdEuclide(x,y);
	}
}
